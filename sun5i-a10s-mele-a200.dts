/dts-v1/;
#include "sun5i-a10s.dtsi"
#include "sunxi-common-regulators.dtsi"

#include <dt-bindings/gpio/gpio.h>
#include <dt-bindings/input/input.h>
#include <dt-bindings/pinctrl/sun4i-a10.h>

/ {
	model = "Mele A10s-Mele-A200";
	compatible = "mele,a10s-mele-a200", "allwinner,sun5i-a10s";

	aliases {
		serial0 = &uart0;
	};

	chosen {
		stdout-path = "serial0:115200n8";
	};
};

&ehci0 {
	status = "okay";
};

&emac {
	pinctrl-names = "default";
	pinctrl-0 = <&emac_pa_pins>;
	phy = <&phy1>;
	status = "okay";
};

&emac_sram {
	status = "okay";
};

&hdmi {
	status = "okay";
};

&i2c0 {
	status = "okay";

	axp152: pmic@30 {
		reg = <0x30>;
		interrupts = <0>;
	};
};

#include "axp152.dtsi"

&mdio {
	status = "okay";

	phy1: ethernet-phy@1 {
		reg = <1>;
	};
};

&mmc0 {
    vmmc-supply = <&reg_vcc3v3>;
    bus-width = <4>;
    cd-gpios = <&pio 6 1 GPIO_ACTIVE_HIGH>; /* PG1 */
    cd-inverted;
    status = "okay";
};

&nfc {
	pinctrl-names = "default";
	pinctrl-0 = <&nand_pins &nand_cs0_pin &nand_rb0_pin>;
	status = "okay";

	nand@0 {
		#address-cells = <2>;
		#size-cells = <2>;
		reg = <0>;
		allwinner,rb = <0>;
		nand-ecc-mode = "hw";

		boot0@0 {
			label = "boot0";
			reg = /bits/ 64 <0x0 0x200000>;
		};

		boot0-rescue@200000 {
			label = "boot0-rescue";
			reg = /bits/ 64 <0x200000 0x200000>;
		};

		uboot@400000 {
			label = "uboot";
			reg = /bits/ 64 <0x400000 0x200000>;
		};

		uboot-rescue@600000 {
			label = "uboot-rescue";
			reg = /bits/ 64 <0x600000 0x200000>;
		};

		main@800000 {
			label = "main";
			reg = /bits/ 64 <0x800000 0xff800000>;
		};
	};
};

&ohci0 {
	status = "okay";
};

&otg_sram {
	status = "okay";
};

&pio {
    	mmc0_cd_pin_olinuxino_micro: mmc0_cd_pin@0 {
        	allwinner,pins = "PG1";
		allwinner,function = "gpio_in";
		allwinner,drive = <SUN4I_PINCTRL_10_MA>;
		allwinner,pull = <SUN4I_PINCTRL_PULL_UP>;
	};
	usb0_id_detect_pin: usb0_id_detect_pin@0 {
		allwinner,pins = "PG13";
		allwinner,function = "gpio_in";
		allwinner,drive = <SUN4I_PINCTRL_10_MA>;
		allwinner,pull = <SUN4I_PINCTRL_PULL_UP>;
	};
	usb0_vbus_detect_pin: usb0_vbus_detect_pin@0 {
		allwinner,pins = "PG0";
		allwinner,function = "gpio_in";
		allwinner,drive = <SUN4I_PINCTRL_10_MA>;
		allwinner,pull = <SUN4I_PINCTRL_PULL_DOWN>;
	};
};

&reg_usb0_vbus {
	gpio = <&pio 3 25 GPIO_ACTIVE_HIGH>;
	status = "okay";
};

&uart0 {
	pinctrl-names = "default";
	pinctrl-0 = <&uart0_pb_pins>;
	status = "okay";
};

&usb_otg {
	dr_mode = "host";
	status = "okay";
};

&usbphy {
    pinctrl-names = "default";
	pinctrl-0 = <&usb0_id_detect_pin>, <&usb0_vbus_detect_pin>;
	usb0_id_det-gpios = <&pio 6 13 GPIO_ACTIVE_HIGH>; /* PG13 */
	usb0_vbus-supply = <&reg_usb0_vbus>;
    usb1_vbus-supply = <&reg_vcc5v0>;
    status = "okay";
};
